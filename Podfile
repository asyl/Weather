platform :ios, '9.0'

target 'Weather' do
  
  use_frameworks!

  # Architecture
  pod 'ReactorKit', '~> 0.5'

  # Networking
  pod 'Alamofire', '~> 4.5'
  pod 'Moya', '~> 8.0'
  pod 'Moya/RxSwift', '~> 8.0'
  pod 'MoyaSugar', '~> 0.4'
  pod 'MoyaSugar/RxSwift', '~> 0.4'
  
  # Model
  pod 'ObjectMapper', '~> 2.2'
  
  # Rx
  pod 'RxSwift', '~> 3.6'
  pod 'RxCocoa', '~> 3.6'
  pod 'RxViewController', '~> 0.2'
  
  # Google API
  pod 'GooglePlaces', '= 2.4.0'
  pod 'GoogleMaps', '= 2.4.0'
  
  # Logging
  pod 'CocoaLumberjack/Swift', '~> 3.2'

  # Misc
  pod 'Then', '~> 2.1'
  pod 'SwiftyColor', '~> 1.0'

  target 'WeatherTests' do
    inherit! :search_paths
    # Pods for testing
  end

end
